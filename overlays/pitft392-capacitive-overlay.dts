/*
 * Device Tree overlay for Coligo+ PiTFT 3.92" capacitive touch screen
 *
 */

/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2835";

	fragment@0 {
		target = <&spi0>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@1 {
		target = <&spidev0>;
		__overlay__ {
			status = "disabled";
		};
	};

	fragment@2 {
		target = <&gpio>;
		__overlay__ {
			pitft_pins: pitft_pins {
				brcm,pins = <4 12 16 27>;
				brcm,function = <0 1 1 1>; /* in out out out */
				brcm,pull = <2 0 0 0>; /* pullup none */
			};
		};
	};

	fragment@3 {
		target = <&spi0>;
		__overlay__ {
			/* needed to avoid dtc warning */
			#address-cells = <1>;
			#size-cells = <0>;

			pitft: pitft@0{
				/* IPS 3.92" 320x320 */
				compatible = "pitft392,st7796";
				reg = <0>;
				pinctrl-names = "default";
				pinctrl-0 = <&pitft_pins>;

				spi-max-frequency = <32000000>;
				rotation = <0>;
				fps = <25>;
				bgr;
				buswidth = <8>;
				reset-gpios = <&gpio 16 0>;
				dc-gpios = <&gpio 27 0>;
				backlight = <&backlight>;
				debug = <0>;
			};
		};
	};

	fragment@4 {
		target = <&i2c1>;
		__overlay__ {
			/* needed to avoid dtc warning */
			#address-cells = <1>;
			#size-cells = <0>;

			ft6236: ft6236@38 {
				compatible = "focaltech,ft6236";
				reg = <0x38>;

				interrupt-parent = <&gpio>;
				interrupts = <4 2>;
				touchscreen-size-x = <320>;
				touchscreen-size-y = <320>;
			};
		};
	};

	fragment@5 {
		target-path = "/soc";
		__overlay__ {
			backlight: backlight {
				compatible = "gpio-backlight";
				gpios = <&gpio 12 0>;
			};
		};
	};
		
	__overrides__ {
		speed =   <&pitft>,"spi-max-frequency:0";
		rotation =  <&pitft>,"rotation:0";
		fps =     <&pitft>,"fps:0";
		debug =   <&pitft>,"debug:0";
		touch-sizex = <&ft6236>,"touchscreen-size-x?";
		touch-sizey = <&ft6236>,"touchscreen-size-y?";
		touch-invx  = <&ft6236>,"touchscreen-inverted-x?";
		touch-invy  = <&ft6236>,"touchscreen-inverted-y?";
		touch-swapxy = <&ft6236>,"touchscreen-swapped-x-y?";
	};
};
